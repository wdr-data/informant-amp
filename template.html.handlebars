    <article class="container">
      <h1 class="headline">{{report.headline}}</h1>
      <p class="meta">{{dateCreated}}</p>
      <section class="fragments">
        {{#report.media}}
          <p id="bubble-image-intro" class="bubble bubble__image bubble__animated">
            <amp-position-observer on="enter:bubbleImageIntro.start"
                                   layout="nodisplay"
                                   once>
            </amp-position-observer>
            <amp-animation id="bubbleImageIntro"
                           layout="nodisplay">
              <script type="application/json">
                      {
                          "selector": "#bubble-image-intro",
                          "animation": "bubbleTransition"
                      }
              </script>
            </amp-animation>
            <amp-img layout=responsive
                     src="{{.}}"
                     width="{{../report.mediaSize.width}}"
                     height="{{../report.mediaSize.height}}"
                     {{#if ../report.media_alt}}
                     alt="{{../report.media_alt}}"
                     {{/if}}>
              <noscript>
                <img src="{{.}}"
                     width="{{../report.mediaSize.width}}"
                     height="{{../report.mediaSize.height}}"
                     {{#if ../report.media_alt}}
                     alt="{{../report.media_alt}}"
                     {{/if}}
                />
              </noscript>
            </amp-img>
          </p>
        {{/report.media}}
        <p id="bubble-bot-intro" class="bubble bubble__bot bubble__animated">
          <amp-position-observer on="enter:bubbleBotIntro.start"
                                 layout="nodisplay"
                                 once>
            </amp-position-observer>
            <amp-animation id="bubbleBotIntro"
                           layout="nodisplay">
              <script type="application/json">
                      {
                          "selector": "#bubble-bot-intro",
                          "animation": "bubbleTransition"
                      }
              </script>
            </amp-animation>
          {{{prepareText report.text}}}
        </p>
        {{#fragments}}
          {{#if question}}
          <p id="bubble-user-{{id}}" class="bubble bubble__user bubble__animated">
            <amp-position-observer on="enter:bubbleUserTransition-{{id}}.start"
                                   layout="nodisplay"
                                   once>
            </amp-position-observer>
            <amp-animation id="bubbleUserTransition-{{id}}"
                           layout="nodisplay">
              <script type="application/json">
                      {
                          "selector": "#bubble-user-{{id}}",
                          "animation": "bubbleTransition"
                      }
              </script>
            </amp-animation>
            {{{prepareText question}}}
          </p>
          {{/if}}
          {{#if media}}
          <p id="bubble-image-{{id}}" class="bubble bubble__image bubble__animated">
            <amp-position-observer on="enter:imageBotTransition-{{id}}.start"
                                   layout="nodisplay"
                                   once>
            </amp-position-observer>
            <amp-animation id="imageBotTransition-{{id}}"
                           layout="nodisplay">
              <script type="application/json">
                {
                  "selector": "#bubble-image-{{id}}",
                  "animation": "bubbleTransition"
                }
              </script>
            </amp-animation>
            <amp-img layout=responsive
                     src="{{media}}"
                     width="{{mediaSize.width}}"
                     height="{{mediaSize.height}}"
                     {{#if media_alt}}
                     alt="{{media_alt}}"
                     {{/if}}>
              <noscript>
                <img src="{{media}}"
                     width="{{mediaSize.width}}"
                     height="{{mediaSize.height}}"
                     {{#if media_alt}}
                     alt="{{media_alt}}"
                     {{/if}}
                />
              </noscript>
            </amp-img>
          </p>
          {{/if}}
          <p id="bubble-bot-{{id}}" class="bubble bubble__bot bubble__animated">
              <amp-position-observer on="enter:bubbleBotTransition-{{id}}.start"
                                     layout="nodisplay"
                                     once
              ></amp-position-observer>
              <amp-animation id="bubbleBotTransition-{{id}}"
                             layout="nodisplay"
              >
                  <script type="application/json">
                      {
                          "selector": "#bubble-bot-{{id}}",
                          "animation": "bubbleTransition"
                      }
                  </script>
              </amp-animation>
              {{{prepareText text}}}
          </p>
        {{/fragments}}
      </section>
    </article>
