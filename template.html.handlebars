          "@type": "ImageObject",
          "url": "{{getImage}}"
        },
      "datePublished": "{{report.published_date}}",
      "dateModified": "{{report.modified}}",
      "author": {
        "@type": "Person",
        "name": "{{report.author}}"
      },
      "publisher": {
        "@type": "Organization",
        "name": "wdr.de",
        "logo": {
          "@type": "ImageObject",
          "url": "https://www1.wdr.de/resources/img/wdr/logo/wdr_logo_print.png",
          "height": 36,
          "width": 117
          }
      },
      "keywords": "{{joinTags report.genres}},{{joinTags report.tags}}",
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "{{urlOrigin}}{{url}}"
      },
      "url": "{{urlOrigin}}{{url}}",
      "isAccessibleForFree": true,
      "inLanguage": {
      	"@type": "Language",
        "name": "German"
      }
    }
    </script>

